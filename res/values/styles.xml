<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	
        <item name="vpiTabPageIndicatorStyle">@style/TabStyle</item>
        <item name="android:textColorPrimary">#FFFFAA</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>
    
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/actionbar_gradient</item>
    </style>
    
    <style name="bgStyle">
        <item name="android:background">#9999CC</item>
    </style>
    
    <style name="drawerStyle">
        <item name="android:background">@drawable/drawer_gradient</item>
        <item name="android:divider">@drawable/drawer_divider_gradient</item>
    </style>
    
    <style name="TabStyle" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/TabStyle.Text</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:divider">@drawable/custom_tab_indicator_divider</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="TabStyle.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">sans</item>
    </style>

</resources>
